<Window x:Class="ZxStudio.Views.VisualizarEstudianteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detalles del Estudiante" Height="480" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Style="{StaticResource CardBorder}" Margin="10" Background="White">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Detalles del Estudiante" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryAccentBrush}"/>
                <TextBlock Text="Información completa en modo lectura" 
                           FontSize="14" 
                           Foreground="Gray"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="Nombre Completo" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding NombreCompleto}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Matrícula" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Matricula}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Iniciales" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Iniciales}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Correo Electrónico" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Correo}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Teléfono" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Telefono}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Sección" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding Seccion}" 
                               FontSize="16" 
                               Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Click="Cerrar_Click"
                        Width="100" Height="35"
                        Style="{StaticResource BotonRedondeado}"
                        Background="{StaticResource AccentGreyBrush}">
                    <TextBlock Text="CERRAR" FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>