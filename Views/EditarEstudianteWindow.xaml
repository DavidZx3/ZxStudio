<Window
    x:Class="ZxStudio.Views.EditarEstudianteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Editar Estudiante"
    Width="500"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Margin="10"
        Background="LightGray"
        Style="{StaticResource CardBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado con color de acento  -->
            <Border
                Grid.Row="0"
                Padding="25,20"
                Background="{StaticResource PrimaryAccentBrush}"
                CornerRadius="8,8,0,0">
                <StackPanel>
                    <TextBlock
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Editar Estudiante" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="13"
                        Foreground="#E0E0E0"
                        Text="Modifique los datos necesarios" />
                </StackPanel>
            </Border>

            <!--  Contenido principal  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="25,20"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!--  Nombre Completo  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource AccentGreyBrush}"
                                Text="NOMBRE COMPLETO *" />
                            <TextBox
                                x:Name="TxtNombreCompleto"
                                Height="30"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="15"
                                PreviewTextInput="TxtNombreCompleto_PreviewTextInput"
                                Style="{StaticResource ModernTextBoxClasic}"
                                Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>

                    <!--  Cedula  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource AccentGreyBrush}"
                                Text="CEDULA *" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Prefijo V- fijo  -->
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="#424242"
                                    Text="V-" />

                                <!--  Campo para los números  -->
                                <TextBox
                                    x:Name="TxtCedulaNumeros"
                                    Grid.Column="1"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="15"
                                    MaxLength="8"
                                    PreviewTextInput="TxtCedulaNumeros_PreviewTextInput"
                                    Style="{StaticResource ModernTextBoxClasic}"
                                    Text="{Binding CedulaNumeros, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  Correo Electrónico  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource AccentGreyBrush}"
                                Text="CORREO ELECTRÓNICO *" />
                            <TextBox
                                Height="30"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="15"
                                Style="{StaticResource ModernTextBoxClasic}"
                                Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>

                    <!--  Teléfono  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource AccentGreyBrush}"
                                Text="TELÉFONO *" />
                            <TextBox
                                Height="30"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="15"
                                Style="{StaticResource ModernTextBoxClasic}"
                                Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>

                    <!--  Sección  -->
                    <Border
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource AccentGreyBrush}"
                                Text="SECCIÓN *" />
                            <ComboBox
                                x:Name="CmbSeccion"
                                Height="35"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="15">
                                <ComboBoxItem Content="6TO A" />
                                <ComboBoxItem Content="6TO B" />
                                <ComboBoxItem Content="5TO A" />
                                <ComboBoxItem Content="5TO B" />
                                <ComboBoxItem Content="4TO A" />
                                <ComboBoxItem Content="4TO B" />
                                <ComboBoxItem Content="3RO A" />
                                <ComboBoxItem Content="3RO B" />
                                <ComboBoxItem Content="2DO A" />
                                <ComboBoxItem Content="2DO B" />
                                <ComboBoxItem Content="1RO A" />
                                <ComboBoxItem Content="1RO B" />
                            </ComboBox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!--  Pie con botones  -->
            <Border
                Grid.Row="2"
                Padding="25,15"
                Background="DarkGray"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,8,8">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                    <Button
                        x:Name="BtnCancelar"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="{StaticResource AccentGreyBrush}"
                        Click="Cancelar_Click"
                        Style="{StaticResource BotonRedondeado}">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Bold"
                            Text="CANCELAR" />
                    </Button>

                    <Button
                        x:Name="BtnGuardar"
                        Width="120"
                        Height="40"
                        Background="{StaticResource PrimaryAccentBrush}"
                        Click="Guardar_Click"
                        Style="{StaticResource BotonRedondeado}">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Bold"
                            Text="GUARDAR" />
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>