<Window x:Class="ZxStudio.Views.EditarEstudianteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Editar Estudiante" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Style="{StaticResource CardBorder}" Margin="10" Background="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado con color de acento -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryAccentBrush}" 
                    CornerRadius="8,8,0,0"
                    Padding="25,20">
                <StackPanel>
                    <TextBlock Text="Editar Estudiante" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Modifique los datos necesarios" 
                               FontSize="13" 
                               Foreground="#E0E0E0"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="25,20">
                <StackPanel>

                    <!-- Nombre Completo -->
                    <Border Background="White" 
                            CornerRadius="6" 
                            Padding="15,12"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="NOMBRE COMPLETO *" 
                                       Foreground="{StaticResource AccentGreyBrush}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="TxtNombreCompleto"
                                     Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="15"
                                     Padding="0"
                                     Height="30"
                                     PreviewTextInput="TxtNombreCompleto_PreviewTextInput"/>
                        </StackPanel>
                    </Border>

                    <!-- Cedula -->
                    <Border Background="White" 
                            CornerRadius="6" 
                            Padding="15,12"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="CEDULA *" 
                                       Foreground="{StaticResource AccentGreyBrush}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Prefijo V- fijo -->
                                <TextBlock Grid.Column="0"
                                           Text="V-"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#424242"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>

                                <!-- Campo para los números -->
                                <TextBox x:Name="TxtCedulaNumeros"
                                         Grid.Column="1"
                                         Text="{Binding CedulaNumeros, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="15"
                                         Padding="0"
                                         Height="30"
                                         MaxLength="8"
                                         PreviewTextInput="TxtCedulaNumeros_PreviewTextInput"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Correo Electrónico -->
                    <Border Background="White" 
                            CornerRadius="6" 
                            Padding="15,12"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="CORREO ELECTRÓNICO *" 
                                       Foreground="{StaticResource AccentGreyBrush}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="15"
                                     Padding="0"
                                     Height="30"/>
                        </StackPanel>
                    </Border>

                    <!-- Teléfono -->
                    <Border Background="White" 
                            CornerRadius="6" 
                            Padding="15,12"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="TELÉFONO *" 
                                       Foreground="{StaticResource AccentGreyBrush}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="15"
                                     Padding="0"
                                     Height="30"/>
                        </StackPanel>
                    </Border>

                    <!-- Sección -->
                    <Border Background="White" 
                            CornerRadius="6" 
                            Padding="15,12">
                        <StackPanel>
                            <TextBlock Text="SECCIÓN *" 
                                       Foreground="{StaticResource AccentGreyBrush}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       Margin="0,0,0,6"/>
                            <ComboBox x:Name="CmbSeccion"
                                      Height="35"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      FontSize="15">
                                <ComboBoxItem Content="6TO A"/>
                                <ComboBoxItem Content="6TO B"/>
                                <ComboBoxItem Content="5TO A"/>
                                <ComboBoxItem Content="5TO B"/>
                                <ComboBoxItem Content="4TO A"/>
                                <ComboBoxItem Content="4TO B"/>
                                <ComboBoxItem Content="3RO A"/>
                                <ComboBoxItem Content="3RO B"/>
                                <ComboBoxItem Content="2DO A"/>
                                <ComboBoxItem Content="2DO B"/>
                                <ComboBoxItem Content="1RO A"/>
                                <ComboBoxItem Content="1RO B"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Pie con botones -->
            <Border Grid.Row="2" 
                    Background="DarkGray"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0"
                    Padding="25,15"
                    CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button x:Name="BtnCancelar"
                            Click="Cancelar_Click"
                            Width="120" 
                            Height="40"
                            Margin="0,0,10,0"
                            Style="{StaticResource BotonRedondeado}"
                            Background="{StaticResource AccentGreyBrush}">
                        <TextBlock Text="CANCELAR" 
                                   FontWeight="Bold"
                                   FontSize="13"/>
                    </Button>

                    <Button x:Name="BtnGuardar"
                            Click="Guardar_Click"
                            Width="120" 
                            Height="40"
                            Style="{StaticResource BotonRedondeado}"
                            Background="{StaticResource PrimaryAccentBrush}">
                        <TextBlock Text="GUARDAR" 
                                   FontWeight="Bold"
                                   FontSize="13"/>
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>