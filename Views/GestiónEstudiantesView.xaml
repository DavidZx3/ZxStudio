<UserControl
    x:Class="ZxStudio.Views.GestionEstudiantesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource LightGreyBrush}"
    mc:Ignorable="d">

    <!--  CONTENEDOR PRINCIPAL AHORA ES GRID  -->
    <Grid Margin="30,25,30,54">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        <!--  ENCABEZADO  -->
       
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource SecondaryGreyBrush}"
                    Text="Gestión de Estudiantes" />

                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="13"
                    Foreground="{StaticResource PrimaryAccentBrush}"
                    Text="{Binding TotalEstudiantes, StringFormat='Total de estudiantes: {0}'}" />
            </StackPanel>

        </Grid>

        <!--  BOTONES  -->
       
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            Orientation="Horizontal">

            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Background="#37424A"
                Click="VisualizarEstudiante_Click"
                Style="{StaticResource BotonRedondeado}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,4,0"
                        Kind="Eye" />
                    <TextBlock VerticalAlignment="Center" Text="VER" />
                </StackPanel>
            </Button>

            <Button
                Width="100"
                Height="30"
                Margin="0,0,10,0"
                Background="{StaticResource AccentGreyBrush}"
                Click="EditarEstudiante_Click"
                Style="{StaticResource BotonRedondeado}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,4,0"
                        Kind="Pencil" />
                    <TextBlock VerticalAlignment="Center" Text="EDITAR" />
                </StackPanel>
            </Button>

            <Button
                Width="100"
                Height="30"
                Background="{StaticResource PrimaryGreyBrush}"
                Click="EliminarEstudiante_Click"
                Style="{StaticResource BotonRedondeado}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,4,0"
                        Kind="TrashCanOutline" />
                    <TextBlock VerticalAlignment="Center" Text="ELIMINAR" />
                </StackPanel>
            </Button>

            <Button
                Width="150"
                Height="30"
                Margin="10,0,0,0"
                Background="{StaticResource PrimaryGreyBrush}"
                Click="AgregarEstudiante_Click"
                Style="{StaticResource BotonRedondeado}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,4,0"
                        Kind="Plus" />
                    <TextBlock VerticalAlignment="Center" Text="AGREGAR" />
                </StackPanel>
            </Button>
            <Button
                Width="100"
                Height="30"
                Margin="10,0,10,0"
                Background="{StaticResource AccentGreyBrush}"
                Click="GuardarDatos_Click"
                Style="{StaticResource BotonRedondeado}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,4,0"
                        Kind="ContentSave" />
                    <TextBlock VerticalAlignment="Center" Text="GUARDAR" />
                </StackPanel>
            </Button>
        </StackPanel>

      
        <!--  TABLA  -->
   
        <Border
            Grid.Row="2"
            Margin="0,0,0,76"
            Background="White"
            BorderBrush="{StaticResource PrimaryGreyBrush}"
            BorderThickness="1"
            CornerRadius="6">

            <!--  Scroll SOLO para tabla  -->
            <ScrollViewer
                Margin="0,0,0,-1"
                CanContentScroll="False"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">

                <Grid MinWidth="900">

                    <DataGrid
                        x:Name="EstudiantesDataGrid"
                        MinHeight="300"
                        Margin="0,0,0,37"
                        AutoGenerateColumns="False"
                        Background="White"
                        BorderThickness="0"
                        CanUserAddRows="False"
                        FrozenColumnCount="0"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding ListaEstudiantes}"
                        ScrollViewer.CanContentScroll="False"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                        SelectionMode="Single"
                        SelectionUnit="FullRow">

                        <DataGrid.Resources>

                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource PrimaryGreyBrush}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Padding" Value="15,12,15,12" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </DataGrid.Resources>

                        <!--  COLUMNAS  -->
                        <DataGrid.Columns>

                            <DataGridTemplateColumn Width="80" Header="ID">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="40"
                                            Height="40"
                                            Margin="15,8,0,8"
                                            HorizontalAlignment="Left"
                                            Background="{StaticResource PrimaryAccentBrush}"
                                            CornerRadius="20">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding Iniciales}" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="180" Header="Foto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="13"
                                            Foreground="{StaticResource SecondaryGreyBrush}"
                                            Text="{Binding NombreCompleto}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="150" Header="Nombre">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="13"
                                            Foreground="{StaticResource SecondaryGreyBrush}"
                                            Text="{Binding Matricula}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="250" Header="Correo">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="13"
                                            Foreground="{StaticResource SecondaryGreyBrush}"
                                            Text="{Binding Correo}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="150" Header="Teléfono">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="13"
                                            Foreground="{StaticResource SecondaryGreyBrush}"
                                            Text="{Binding Telefono}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="100" Header="Sección">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="13"
                                            Foreground="{StaticResource SecondaryGreyBrush}"
                                            Text="{Binding Seccion}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>

            </ScrollViewer>

        </Border>

    </Grid>
</UserControl>
