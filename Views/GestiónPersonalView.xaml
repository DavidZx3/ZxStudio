<UserControl
    x:Class="ZxStudio.Views.GestionPersonalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource AppLightBackground}"
    mc:Ignorable="d">

    <StackPanel Margin="40">
        <!-- Título -->
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Foreground="{StaticResource AppPrimaryBrush}"
            Text="Gestión de Personal"
            Margin="0,0,0,20" />

        <TextBlock
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="{StaticResource AppDarkTextBrush}"
            Text="Búsqueda Avanzada"
            Margin="0,0,0,15" />

        <!-- Barra de búsqueda -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox 
                Grid.Column="0"
                Height="40"
                VerticalContentAlignment="Center"
                Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="12"
                FontSize="14"
                Text="Escribe aquí para buscar...">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button
                Grid.Column="1"
                Height="40"
                Margin="10,0,0,0"
                Padding="20,0"
                Content="BUSCAR"
                Background="{StaticResource AppPrimaryBrush}"
                Foreground="White"
                FontSize="14"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Botones de filtro -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button 
                Height="35"
                Padding="15,0"
                Content="POR CARPETA"
                Background="{StaticResource PrimaryAccentBrush}"
                Foreground="White"
                FontSize="12"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button 
                Height="35"
                Padding="15,0"
                Content="POR ETIQUETA"
                Background="{StaticResource PrimaryAccentBrush}"
                Foreground="White"
                FontSize="12"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <!-- Área de resultados (placeholder) -->
        <Border 
            Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="8"
            Padding="30"
            MinHeight="300">
            <TextBlock 
                Text="Los resultados de búsqueda aparecerán aquí..."
                FontSize="14"
                Foreground="#999999"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>