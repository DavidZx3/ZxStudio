<UserControl
    x:Class="ZxStudio.Views.GestionPersonalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="40">
        <TextBlock
            Height="30"
            FontSize="20"
            FontWeight="Bold"
            Foreground="{StaticResource PrimaryGreyBrush}"
            Text="Búsqueda Avanzada" />

        <Grid Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource ModernTextBox}" Text="Escribe aquí..." />

            <Button
                Grid.Column="1"
                Margin="10,0,0,0"
                Content="BUSCAR"
                Style="{StaticResource ModernButtonStyle}" />
        </Grid>

        <StackPanel Orientation="Horizontal">
            <Button Content="POR CARPETA" Style="{StaticResource ModernButtonStyle}" />
            <Button Content="POR ETIQUETA" Style="{StaticResource ModernButtonStyle}" />
        </StackPanel>
    </StackPanel>
</UserControl>