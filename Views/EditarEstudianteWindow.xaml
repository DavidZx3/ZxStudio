<Window x:Class="ZxStudio.Views.EditarEstudianteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Editar Estudiante" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Style="{StaticResource CardBorder}" Margin="10" Background="White">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Editar Estudiante" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource SecondaryGreyBrush}"/>
                <TextBlock Text="Modifique los datos a continuación" 
                           FontSize="14" 
                           Foreground="Gray"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top">

                    <TextBlock Text="Nombre Completo" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NombreCompleto, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Matrícula" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Matricula, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Correo Electrónico" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Teléfono" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Sección" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Seccion, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Ejemplo de campo extra" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="Dato Adicional"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <TextBlock Text="Otro campo extra" Foreground="{StaticResource SecondaryGreyBrush}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="Más datos"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">

                <Button Click="Cancelar_Click"
                        Width="100" Height="35" Margin="0,0,10,0"
                        Style="{StaticResource BotonRedondeado}"
                        Background="{StaticResource AccentGreyBrush}">
                    <TextBlock Text="CANCELAR" FontWeight="Bold"/>
                </Button>

                <Button Click="Guardar_Click"
                        Width="100" Height="35"
                        Style="{StaticResource BotonRedondeado}"
                        Background="{StaticResource PrimaryAccentBrush}">
                    <TextBlock Text="GUARDAR" FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>