<Window
    x:Class="ZxStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:ZxStudio.Views"
    Title="ZxStudio"
    Width="1100"
    Height="700"
    Background="#F5F5F5"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PrimaryGreyBrush}">
            <StackPanel>

                <Image
                    Width="180"
                    Height="70"
                    Margin="20,30,10,30"
                    HorizontalAlignment="Left"
                    Source="/Resources/zxstudio.png"
                    Stretch="Uniform" />
                <ListBox
                    x:Name="MenuLateral"
                    Background="Transparent"
                    BorderThickness="0"
                    SelectedIndex="0"
                    SelectionChanged="MenuLateral_SelectionChanged">

                    <ListBoxItem Content="Inicio" Style="{StaticResource MenuItemStyle}" />
                    <ListBoxItem
                        Content="Gestión de Personal"
                        Selected="ListBoxItem_Selected"
                        Style="{StaticResource MenuItemStyle}" />
                    <ListBoxItem Content="Gestión de Estudiantes" Style="{StaticResource MenuItemStyle}" />
                    <ListBoxItem Content="Configuración" Style="{StaticResource MenuItemStyle}" />
                </ListBox>
            </StackPanel>
        </Border>

        <TabControl
            x:Name="ContenidoPrincipal"
            Grid.Column="1"
            Margin="0"
            Background="{StaticResource LightGreyBrush}"
            BorderThickness="0">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </TabControl.Resources>

            <TabItem>
                <views:InicioView />
            </TabItem>

            <TabItem>
                <views:BusquedaView />
            </TabItem>

            <TabItem>
                <views:ImagenesView />
            </TabItem>

            <TabItem>
                <views:ConfiguracionView />
            </TabItem>

        </TabControl>
    </Grid>
</Window>