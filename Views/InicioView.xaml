<UserControl
    x:Class="ZxStudio.Views.InicioView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="{StaticResource LightGreyBrush}"
    mc:Ignorable="d">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,30">

                <Grid Margin="40,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0"
                        Width="290"
                        Height="200"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Resources/ZxStudio.png"
                        Stretch="Uniform" />

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{StaticResource PrimaryAccentBrush}"
                            Text="Excelencia en gestión y control académico."
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <Separator Margin="40,0,0,0" Background="#CCCC" />
                <Border Margin="40,0,0,25" Style="{StaticResource CardBorder}">
                    <StackPanel Margin="25">
                        <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,12,0"
                                Foreground="{StaticResource PrimaryAccentBrush}"
                                Kind="Calendar" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#555555"
                                Text="PRÓXIMOS EVENTOS" />
                        </StackPanel>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryAccentBrush}"
                                Text="15 Dic 2024" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{StaticResource SecondaryGreyBrush}"
                                Text="Reunión Administrativa" />
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryAccentBrush}"
                                Text="20 Dic 2024" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{StaticResource SecondaryGreyBrush}"
                                Text="Acto de Graduación" />
                        </Grid>

                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryAccentBrush}"
                                Text="22 Dic 2024" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="13"
                                Foreground="{StaticResource SecondaryGreyBrush}"
                                Text="Cierre de Semestre" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Margin="40,0,0,30" Style="{StaticResource CardBorder}">
                    <StackPanel Margin="25">
                        <StackPanel Margin="0,0,0,25" Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,12,0"
                                Foreground="{StaticResource PrimaryAccentBrush}"
                                Kind="ChartBox" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#555555"
                                Text="ESTADÍSTICAS" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="15"
                                Background="#F9F9F9"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1"
                                CornerRadius="6">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        Foreground="{StaticResource PrimaryAccentBrush}"
                                        Kind="School" />
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="28"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryGreyBrush}"
                                        Text="245" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#777777"
                                        Text="Estudiantes Activos"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Padding="15"
                                Background="#F9F9F9"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1"
                                CornerRadius="6">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        Foreground="{StaticResource PrimaryAccentBrush}"
                                        Kind="AccountTie" />
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="28"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryGreyBrush}"
                                        Text="18" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#777777"
                                        Text="Docentes"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                Padding="15"
                                Background="#F9F9F9"
                                BorderBrush="#E8E8E8"
                                BorderThickness="1"
                                CornerRadius="6">
                                <StackPanel HorizontalAlignment="Center">
                                    <materialDesign:PackIcon
                                        Width="32"
                                        Height="32"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        Foreground="{StaticResource PrimaryAccentBrush}"
                                        Kind="BookMultiple" />
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        FontSize="28"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource SecondaryGreyBrush}"
                                        Text="8" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#777777"
                                        Text="Secciones"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border
            Grid.Row="1"
            Padding="0,10"
            HorizontalAlignment="Stretch"
            Background="#797979">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="10"
                Foreground="White"
                Text="© 2025 Geomar David. Todos los derechos reservados." />
        </Border>
    </Grid>
</UserControl>