<Window
    x:Class="ZxStudio.Views.VisualizarEstudianteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Detalles del Estudiante"
    Width="500"
    Height="520"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Margin="10"
        Background="LightGray"
        Style="{StaticResource CardBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Encabezado con color de acento  -->
            <Border
                Grid.Row="0"
                Padding="25,20"
                Background="{StaticResource PrimaryAccentBrush}"
                CornerRadius="8,8,0,0">
                <StackPanel>
                    <TextBlock
                        FontSize="26"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Detalles del Estudiante" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="13"
                        Foreground="#E0E0E0"
                        Text="Información completa del registro" />
                </StackPanel>
            </Border>

            <!--  Contenido principal  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="25,20"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!--  Nombre Completo  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource AccentGreyBrush}"
                                    Text="NOMBRE COMPLETO" />
                                <TextBlock
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource PrimaryGreyBrush}"
                                    Text="{Binding NombreCompleto}"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                            <!--  Botón Copiar  -->
                            <Button
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CopiarNombre_Click"
                                Cursor="Hand"
                                ToolTip="Copiar nombre">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="5"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" Fill="{StaticResource PrimaryAccentBrush}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Cedula  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource AccentGreyBrush}"
                                    Text="CEDULA" />
                                <TextBlock
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource PrimaryGreyBrush}"
                                    Text="{Binding Cedula}" />
                            </StackPanel>

                            <!--  Botón Copiar  -->
                            <Button
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CopiarCedula_Click"
                                Cursor="Hand"
                                ToolTip="Copiar cédula">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="5"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" Fill="{StaticResource PrimaryAccentBrush}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Correo Electrónico  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource AccentGreyBrush}"
                                    Text="CORREO ELECTRÓNICO" />
                                <TextBlock
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource PrimaryGreyBrush}"
                                    Text="{Binding Correo}"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                            <!--  Botón Copiar  -->
                            <Button
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CopiarCorreo_Click"
                                Cursor="Hand"
                                ToolTip="Copiar correo">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="5"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" Fill="{StaticResource PrimaryAccentBrush}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Teléfono  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource AccentGreyBrush}"
                                    Text="TELÉFONO" />
                                <TextBlock
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource PrimaryGreyBrush}"
                                    Text="{Binding Telefono}" />
                            </StackPanel>

                            <!--  Botón Copiar  -->
                            <Button
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CopiarTelefono_Click"
                                Cursor="Hand"
                                ToolTip="Copiar teléfono">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="5"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" Fill="{StaticResource PrimaryAccentBrush}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>

                    <!--  Sección  -->
                    <Border
                        Padding="15,12"
                        Background="White"
                        CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    Margin="0,0,0,6"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource AccentGreyBrush}"
                                    Text="SECCIÓN" />
                                <TextBlock
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource PrimaryGreyBrush}"
                                    Text="{Binding Seccion}" />
                            </StackPanel>

                            <!--  Botón Copiar  -->
                            <Button
                                Grid.Column="1"
                                Width="35"
                                Height="35"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CopiarSeccion_Click"
                                Cursor="Hand"
                                ToolTip="Copiar sección">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="5"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F0F0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Viewbox Width="20" Height="20">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" Fill="{StaticResource PrimaryAccentBrush}" />
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!--  Pie con botón  -->
            <Border
                Grid.Row="2"
                Padding="25,15"
                Background="DarkGray"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,8,8">
                <Button
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Right"
                    Background="{StaticResource PrimaryAccentBrush}"
                    Click="Cerrar_Click"
                    Style="{StaticResource BotonRedondeado}">
                    <TextBlock
                        FontSize="13"
                        FontWeight="Bold"
                        Text="CERRAR" />
                </Button>
            </Border>

        </Grid>
    </Border>
</Window>